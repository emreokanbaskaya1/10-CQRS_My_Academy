@model CreateCategoryCommand
@{ ViewData["Title"] = "Yeni Kategori"; }

<div class="card">
    <div class="card-header"><i class="fas fa-plus me-2"></i>Yeni Kategori Ekle</div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label class="form-label">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" required>
                </div>
                <div class="col-md-8 mb-3">
                    <label class="form-label">Kategori Görseli</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*">
                    <input asp-for="ImageUrl" type="hidden">
                </div>
            </div>
            <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Kaydet</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>
