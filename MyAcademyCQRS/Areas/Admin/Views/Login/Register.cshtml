@model MyAcademyCQRS.Models.AdminRegisterViewModel
@{ Layout = null; }

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Yönetici Kaydı - MyAcademy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body { background: #f4f6f9; min-height: 100vh; display: flex; align-items: center; justify-content: center; }
        .login-card { width: 100%; max-width: 450px; border: none; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); background: #fff; }
        .login-header { padding: 40px 30px 20px; text-align: center; }
        .login-body { padding: 0 30px 40px; }
        .form-control { border-radius: 8px; padding: 12px 15px; border: 1px solid #e1e5eb; background: #fdfdfd; }
        .btn-success { width: 100%; padding: 12px; border-radius: 8px; font-weight: 600; border: none; transition: all 0.2s; }
        .text-danger ul { list-style: none; padding: 0; margin: 0; font-size: 0.9rem; }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <h4 class="mb-1 text-dark">Yeni Yönetici Kaydı</h4>
            <p class="text-muted small">Admin paneline erişim için hesap oluşturun</p>
        </div>
        <div class="login-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger p-2 mb-3">
                    <div asp-validation-summary="All" class="text-danger m-0"></div>
                </div>
            }
            <form method="post">
                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <label class="form-label small text-muted">Ad</label>
                        <input asp-for="Name" class="form-control" required>
                    </div>
                    <div class="col-6">
                        <label class="form-label small text-muted">Soyad</label>
                        <input asp-for="Surname" class="form-control" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label small text-muted">E-posta</label>
                    <input asp-for="Email" type="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label small text-muted">Kullanıcı Adı</label>
                    <input asp-for="Username" class="form-control" required>
                </div>
                <div class="mb-4">
                    <label class="form-label small text-muted">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-success shadow-sm">Kayıt Ol <i class="fas fa-user-plus ms-2"></i></button>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Login", new { area = "Admin" })" class="text-decoration-none small text-secondary">Zaten hesabınız var mı? Giriş Yapın</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
