@model MyAcademyCQRS.Entities.PhotoGallery
@{ ViewData["Title"] = "Yeni Fotoğraf"; }
<div class="card"><div class="card-header"><i class="fas fa-plus me-2"></i>Yeni Fotoğraf</div><div class="card-body">
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 mb-3"><label class="form-label">Başlık</label><input asp-for="Title" class="form-control" required></div>
        <div class="col-md-3 mb-3"><label class="form-label">Kategori Etiketi</label><input asp-for="CategoryTag" class="form-control" placeholder="ör: cake, bread"></div>
        <div class="col-md-3 mb-3"><label class="form-label">Fotoğraf</label><input type="file" name="imageFile" class="form-control" accept="image/*" required></div>
    </div>
    <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
</form></div></div>
