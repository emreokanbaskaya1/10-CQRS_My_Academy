@model MyAcademyCQRS.Entities.Promotion
@{ ViewData["Title"] = "Kampanya Düzenle"; }
<div class="card"><div class="card-header"><i class="fas fa-edit me-2"></i>Kampanya Düzenle</div><div class="card-body">
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden">
    <div class="row">
        <div class="col-md-6 mb-3"><label class="form-label">Başlık</label><input asp-for="Title" class="form-control" required></div>
        <div class="col-md-3 mb-3"><label class="form-label">İndirim %</label><input asp-for="DiscountPercentage" type="number" step="0.01" class="form-control" required></div>
        <div class="col-md-3 mb-3"><label class="form-label">Promo Kodu</label><input asp-for="PromoCode" class="form-control"></div>
        <div class="col-md-12 mb-3">
             <label class="form-label">Kampanya Görseli</label><br>
             @if (!string.IsNullOrEmpty(Model.ImageUrl)) { <img src="@Model.ImageUrl" style="width:100px;border-radius:6px;" class="mb-2"> }
             <input type="file" name="imageFile" class="form-control" accept="image/*">
             <input asp-for="ImageUrl" type="hidden">
        </div>
        <div class="col-md-12 mb-3"><label class="form-label">Açıklama</label><textarea asp-for="Description" class="form-control" rows="3"></textarea></div>
        <div class="col-md-4 mb-3"><label class="form-label">Başlangıç</label><input asp-for="StartDate" type="date" class="form-control" required></div>
        <div class="col-md-4 mb-3"><label class="form-label">Bitiş</label><input asp-for="EndDate" type="date" class="form-control" required></div>
        <div class="col-md-4 mb-3"><label class="form-label">Durum</label><select asp-for="IsActive" class="form-select"><option value="true">Aktif</option><option value="false">Pasif</option></select></div>
    </div>
    <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Güncelle</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
</form></div></div>
