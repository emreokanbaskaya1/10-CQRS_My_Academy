@model MyAcademyCQRS.Entities.Service
@{ ViewData["Title"] = "Yeni Hizmet"; }
<div class="card"><div class="card-header"><i class="fas fa-plus me-2"></i>Yeni Hizmet</div><div class="card-body">
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 mb-3"><label class="form-label">Başlık</label><input asp-for="Title" class="form-control" required></div>
        <div class="col-md-3 mb-3"><label class="form-label">Sıra</label><input asp-for="DisplayOrder" type="number" class="form-control" value="1"></div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Hizmet İkonu/Görseli</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*">
            <input asp-for="IconUrl" type="hidden">
        </div>
        <div class="col-md-12 mb-3"><label class="form-label">Açıklama</label><textarea asp-for="Description" class="form-control" rows="3"></textarea></div>
    </div>
    <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
</form></div></div>
