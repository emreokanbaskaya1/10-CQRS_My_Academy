@model MyAcademyCQRS.Entities.Service
@{ ViewData["Title"] = "Hizmet Düzenle"; }
<div class="card"><div class="card-header"><i class="fas fa-edit me-2"></i>Hizmet Düzenle</div><div class="card-body">
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden">
    <div class="row">
        <div class="col-md-6 mb-3"><label class="form-label">Başlık</label><input asp-for="Title" class="form-control" required></div>
        <div class="col-md-3 mb-3"><label class="form-label">Sıra</label><input asp-for="DisplayOrder" type="number" class="form-control"></div>
        <div class="col-md-3 mb-3">
             <label class="form-label">Hizmet İkonu/Görseli</label><br>
             @if (!string.IsNullOrEmpty(Model.IconUrl)) { <img src="@Model.IconUrl" style="width:50px;border-radius:6px;" class="mb-2"> }
             <input type="file" name="imageFile" class="form-control" accept="image/*">
             <input asp-for="IconUrl" type="hidden">
        </div>
        <div class="col-md-12 mb-3"><label class="form-label">Açıklama</label><textarea asp-for="Description" class="form-control" rows="3"></textarea></div>
    </div>
    <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Güncelle</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
</form></div></div>
