@model MyAcademyCQRS.Entities.ServiceStep
@{ ViewData["Title"] = "Yeni Step"; }
<div class="card">
    <div class="card-header"><i class="fas fa-plus me-2"></i>Yeni Feature Step</div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Step No</label>
                    <input asp-for="StepNumber" type="number" class="form-control" required>
                </div>
                <div class="col-md-8 mb-3">
                    <label class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" required>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Görsel (İsteğe Bağlı)</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*">
                    <small class="text-muted">JPG, PNG veya WebP formatında yükleyebilirsiniz. Önerilen boyut: 400x300 px</small>
                </div>
            </div>
            <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Kaydet</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>
