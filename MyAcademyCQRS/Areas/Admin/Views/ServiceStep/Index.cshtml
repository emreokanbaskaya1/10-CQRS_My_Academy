@model List<MyAcademyCQRS.Entities.ServiceStep>
@{ ViewData["Title"] = "Feature Steps"; }

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0"><i class="fas fa-list-ol me-2"></i>Feature Steps</h5>
    <a href="@Url.Action("Create")" class="btn btn-bakery"><i class="fas fa-plus me-2"></i>Yeni Step</a>
</div>

<div class="row">
    @foreach (var s in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">@s.Title</h6>
                    <span class="badge bg-primary">Step @s.StepNumber</span>
                </div>
                @if (!string.IsNullOrEmpty(s.ImageUrl))
                {
                    <img src="@s.ImageUrl" class="card-img-top" alt="@s.Title" style="height:200px;object-fit:cover;">
                }
                <div class="card-body">
                    <p class="text-muted small mb-0">@s.Description</p>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Update", new { id = s.Id })" class="btn btn-sm btn-bakery-outline">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <form asp-action="Delete" asp-route-id="@s.Id" method="post" class="d-inline" 
                          onsubmit="return confirm('@s.Title adımını silmek istediğinize emin misiniz?')">
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-list-ol fa-3x mb-3 text-muted"></i>
                    <h5 class="text-muted">Henüz feature step eklenmemiş</h5>
                    <p class="text-muted">Siparişlerinizin adımlarını görsel ve açıklamalarla tanımlayın!</p>
                    <a href="@Url.Action("Create")" class="btn btn-bakery mt-2">
                        <i class="fas fa-plus me-2"></i> İlk Step'i Ekle
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="alert alert-info mt-4">
    <i class="fas fa-info-circle me-2"></i>
    <strong>Bilgi:</strong> Feature Steps ana sayfada gösterilir. Her adım için görsel ve açıklama ekleyebilirsiniz. 
    <strong>Önerilen görsel boyutu: 400x300 px</strong>
</div>
