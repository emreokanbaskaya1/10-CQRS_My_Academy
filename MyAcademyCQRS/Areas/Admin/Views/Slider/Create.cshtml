@model MyAcademyCQRS.Entities.Slider
@{ ViewData["Title"] = "Yeni Slider"; }

<div class="card">
    <div class="card-header"><i class="fas fa-plus me-2"></i>Yeni Slider Ekle</div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Başlık *</label>
                    <input asp-for="Title" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Sıra</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" value="1">
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Durum</label>
                    <select asp-for="IsActive" class="form-select">
                        <option value="true" selected>✅ Aktif</option>
                        <option value="false">❌ Pasif</option>
                    </select>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Slider açıklaması (isteğe bağlı)"></textarea>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Buton Metni</label>
                    <input asp-for="ButtonText" class="form-control" placeholder="örn: Ürünlere Göz At">
                    <small class="text-muted">Boş bırakırsanız buton görünmez</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Buton URL</label>
                    <input asp-for="ButtonUrl" class="form-control" placeholder="örn: /Home/Shop">
                    <small class="text-muted">Buton metni varsa gereklidir</small>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Görsel * (Önerilen: 1920x600 px)</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" required>
                    <small class="text-muted">JPG, PNG veya WebP formatında yükleyebilirsiniz</small>
                </div>
            </div>
            <button type="submit" class="btn btn-bakery"><i class="fas fa-save me-2"></i>Kaydet</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>
