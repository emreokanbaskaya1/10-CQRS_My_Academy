@model List<MyAcademyCQRS.Entities.PhotoGallery>
@{ 
    ViewData["Title"] = "Galeri";
    var pageHeader = ViewBag.PageHeader as MyAcademyCQRS.Entities.PageHeader;
}

<section class="page-title" style="background-image:url(@(pageHeader?.BackgroundImageUrl ?? "/images/background/page-title.jpg"));">
    <div class="auto-container">
        <div class="content-box">
            <h1>@(pageHeader?.Title ?? "Galeri")</h1>
            <ul class="bread-crumb clearfix"><li><a href="/">Ana Sayfa</a></li><li>Galeri</li></ul>
        </div>
    </div>
</section>

<section class="gallery-section sec-pad" style="background: #f8f9fa;">
    <div class="auto-container">
        <div class="sec-title centred mb-5">
            <span class="sub-title">Lezzetli Anlar</span>
            <h2>Fotoðraf Galerimiz</h2>
            <p class="text-muted">En özel ürünlerimizden kareler</p>
        </div>
        
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var photo in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="gallery-card">
                            <div class="gallery-image-wrapper">
                                <img src="@photo.ImageUrl" alt="@photo.Title" class="gallery-image">
                                <div class="gallery-overlay">
                                    <div class="overlay-content">
                                        <h5 class="gallery-title">@photo.Title</h5>
                                        <a href="@photo.ImageUrl" class="gallery-zoom-btn" data-fancybox="gallery" data-caption="@photo.Title">
                                            <i class="fas fa-search-plus"></i>
                                            <span>Büyüt</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-images fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Henüz fotoðraf eklenmemiþ</h4>
                <p class="text-muted">Yakýnda güzel fotoðraflarýmýzý burada görebileceksiniz.</p>
            </div>
        }
    </div>
</section>

@section Scripts {
<style>
    .gallery-card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: #fff;
    }
    
    .gallery-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 30px rgba(195, 147, 91, 0.3);
    }
    
    .gallery-image-wrapper {
        position: relative;
        overflow: hidden;
        padding-top: 75%; /* 4:3 Aspect Ratio */
    }
    
    .gallery-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .gallery-card:hover .gallery-image {
        transform: scale(1.1);
    }
    
    .gallery-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.7));
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .gallery-card:hover .gallery-overlay {
        opacity: 1;
    }
    
    .overlay-content {
        text-align: center;
        transform: translateY(20px);
        transition: transform 0.3s ease;
        padding: 20px;
    }
    
    .gallery-card:hover .overlay-content {
        transform: translateY(0);
    }
    
    .gallery-title {
        color: #fff;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    
    .gallery-zoom-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: #c3935b;
        color: #fff;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(195, 147, 91, 0.4);
    }
    
    .gallery-zoom-btn:hover {
        background: #a67c4a;
        color: #fff;
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(195, 147, 91, 0.6);
    }
    
    .gallery-zoom-btn i {
        font-size: 1.1rem;
    }
    
    /* Responsive Grid */
    @@media (max-width: 768px) {
        .gallery-card {
            margin-bottom: 20px;
        }
        
        .gallery-title {
            font-size: 1rem;
        }
        
        .gallery-zoom-btn {
            padding: 10px 20px;
            font-size: 0.9rem;
        }
    }
    
    /* Fancybox customization */
    .fancybox-button {
        background: rgba(195, 147, 91, 0.9) !important;
    }
    
    .fancybox-button:hover {
        background: rgba(195, 147, 91, 1) !important;
    }
</style>

<script>
    $(document).ready(function() {
        // Fancybox konfigürasyonu
        $('[data-fancybox="gallery"]').fancybox({
            loop: true,
            buttons: [
                "zoom",
                "slideShow",
                "fullScreen",
                "download",
                "thumbs",
                "close"
            ],
            animationEffect: "zoom-in-out",
            transitionEffect: "slide",
            protect: true,
            infobar: true,
            toolbar: true,
            smallBtn: false,
            iframe: {
                preload: false
            }
        });
    });
</script>
}
